{
  "name": "reliability-score-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm install && npm run dev",
    "dev:backend": "PORT=4000 tsx watch src/index.ts",
    "build": "tsc && cd frontend && npm run build",
    "start": "node dist/index.js",
    "test": "jest",
    "test:frontend:smoke": "cd frontend && npm install && npm run test:smoke",
    "test:frontend:component-smoke": "cd frontend && npm install && npm run test:smoke:component",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "@prisma/client": "^5.8.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "bullmq": "^5.1.2",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "prisma": "^5.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
